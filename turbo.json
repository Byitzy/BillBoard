{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "typecheck": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "outputs": []
    },
    "test": {
      "outputs": [],
      "dependsOn": ["build"]
    },
    "test:run": {
      "outputs": [],
      "dependsOn": ["build"]
    },
    "playwright": {
      "outputs": [],
      "dependsOn": ["build"],
      "cache": false
    },
    "playwright:setup": {
      "outputs": [],
      "dependsOn": ["build"],
      "cache": false
    },
    "quality": {
      "outputs": [],
      "dependsOn": ["typecheck", "lint", "format:check"]
    },
    "dev:check": {
      "outputs": [],
      "dependsOn": ["typecheck", "lint", "format:check"]
    }
  },
  "globalDependencies": [
    "next.config.js",
    "tailwind.config.js",
    "tsconfig.json",
    ".env*",
    "package.json"
  ]
}
