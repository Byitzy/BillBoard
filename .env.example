# =================================================================
# SUPABASE CONFIGURATION
# =================================================================
# Get these from: Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =================================================================
# SUPABASE DATABASE ACCESS (for CLI and migrations)
# =================================================================
# Get from: Supabase Dashboard > Settings > Database > Connection string
# Format: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
SUPABASE_DB_URL=postgresql://postgres:YOUR_DB_PASSWORD@db.your-project-ref.supabase.co:5432/postgres
SUPABASE_DB_PASSWORD=your-database-password
SUPABASE_PROJECT_REF=your-project-ref

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
NEXT_PUBLIC_APP_NAME=BillBoard
NEXT_PUBLIC_DEFAULT_LOCALE=en-CA

# =================================================================
# OPTIONAL: EXTERNAL SERVICES
# =================================================================
# Email Service (for sending invites) - Choose one:
# RESEND_API_KEY=re_your-api-key
# SENDGRID_API_KEY=SG.your-api-key

# Visual Feedback Widget (Marker.io)
# Set to your Marker.io project ID to enable the in-app widget
# NEXT_PUBLIC_MARKERIO_PROJECT_ID=your-project-id

# File Storage (if using external storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# =================================================================
# DEVELOPMENT ENVIRONMENT
# =================================================================
NODE_ENV=development
SKIP_ENV_VALIDATION=false

# =================================================================
# NEXT.JS CONFIGURATION
# =================================================================
# Uncomment if deploying to custom domain
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-for-production

